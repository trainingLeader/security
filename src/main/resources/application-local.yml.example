# Archivo de ejemplo para configuración local
# Copia este archivo a application-local.yml y ajusta los valores según tu entorno local

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/security_app_local?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC
    username: root
    password: root
  
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true

jwt:
  secret: tu-secreto-local-aqui
  access-token-expiration: 900000
  refresh-token-expiration: 604800000

logging:
  level:
    com.bkseducate.securityapp: DEBUG
